pipeline {
  agent any
  stages {
    stage('Build') {
      steps {
        echo "building"
        sleep 1
      }
    }
    stage('Test') {
      steps {
        echo "testing"
        sleep 2
      }
    }
    stage('Deploy') {
      steps {
        echo "deploying"
        stageMessage "sample stage message"
      }
    }
  }
}
